function init() {
	// console.log('hi');
	
	if (window.innerWidth < 720 && document.getElementById('home-slide-1')) {
		// closing whitespace gap on mobile b/t header image & title on interior pages
		var slideHeight = document.getElementById('home-slide-1').offsetHeight;
		// console.log(slideHeight);

		if (document.getElementById('viewing-home-slide-1')) {
			document.getElementById('viewing-home-slide-1').style.height = (slideHeight + 30) + 'px';
		}
	}

	var currDate = new Date();
	var promoStartDate = new Date(2016, 1, 1, 0, 0, 0, 0); // Feb 1, 2016
	var promoEndDate = new Date(2016, 1, 15, 0, 0, 0, 0); // Feb 15, 2016
	// console.log(currDate);

	if (currDate > promoStartDate && currDate < promoEndDate)
	{
		// console.log('on');
	    document.getElementById('feb2016promo').style.display = 'block';

	    if (window.innerWidth > 650) {
	    	document.getElementById('main-header-wrapper').style.padding = '35px 0 0';
	    }
	}

}

window.onload = init();
window.onresize = init();